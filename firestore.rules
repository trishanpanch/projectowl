rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null; // Relaxed for debugging
      
      // Allow access to subcollections (history, settings)
      match /{document=**} {
        allow read, write: if request.auth != null; // Relaxed for debugging
      }
    }
  }
}
