{
    "manifest_version": 3,
    "name": "Project Owl - Child Safety Agent",
    "version": "0.1.0",
    "description": "Visual-Context AI for Child Online Safety",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "dist/src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Project Owl",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}